<%- include("partials/header",{path:'/profile'}) %>
<main class="content">
    <div class="container-fluid p-0">

        <h1 class="h3 mb-3">Profile</h1>

        <div class="row">
            <div class="col-md-4 col-xl-3">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Profile Details</h5>
                    </div>
                    <div class="card-body text-center">
                       
                        <img class="card-img" src="<% if (user.coverImg.length!==0){%><%= user.coverImg %><% }else{%>/img/avatars/cover.jpg<% } %>" >
                        <img src="<% if (user.avatarImg.length!==0){%><%= user.avatarImg %><% }else{%>/img/avatars/avatar.jpg<% } %>" alt="<%= user.name %>" style="margin-top: -64px;border:3px solid #fff" class="img-fluid rounded-circle mb-2" width="128" height="128" />
                        
                        <h5 class="card-title mb-0"><%= user.name %></h5>
                        <div class="text-muted mb-2">
                        <% if(user.role=='super'){%><p>Super Admin</p><% } %>
                        <% if(user.role=='admin'){%><p>Admin</p><% } %>
                        <% if(user.role=='tutor'){%><p>Tutor</p><% } %>
                        <% if(user.role=='user'){%><p>>Admin</p><% } %>
                        </div>

                        
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <h5 class="h6 card-title">Bio</h5>
                        <p><%= user.bio %> </p>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <h5 class="h6 card-title">About</h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-1"><span data-feather="home" class="feather-sm me-1"></span> Lives in: <%= user.union %>, <%= user.upozilla %>, <%= user.district %>, <%= user.divission %>
                            </li>

                            <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span> Role: <% if(user.role=='super'){%>Super Admin<% } %>
                                <% if(user.role=='admin'){%>Admin<% } %>
                                <% if(user.role=='tutor'){%>Tutor<% } %>
                                <% if(user.role=='user'){%>>Admin<% } %>  </li>
                           
                        </ul>
                    </div>
          
                </div>
            </div>

            <div class="col-md-8 col-xl-9">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Edit Profile</h5>
                    </div>
                    <div class="card-body">
                        <form id="main" action="/profile/<%= user._id %>" method="post" enctype="multipart/form-data" >
                            <div class="row">
                                <div class="mb-3 col-md-6 col-lg-6 col-xl-6">
                                    <label class="form-label" >Name</label>
                                    <input type="text" class="form-control" value="<%= user.name %> " name="name">
                                </div>
                                <div class="mb-3 col-md-6 col-lg-6 col-xl-6">
                                    <label class="form-label" >Phone</label>
                                    <input type="text" class="form-control"value="<%= user.phone %>" name="phone">
                                </div>
                                <div class="mb-3 col-md-6 col-lg-6 col-xl-6">
                                    <label class="form-label" >Email</label>
                                    <input type="email" class="form-control"value="<%= user.email %>" name="email">
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <label class="form-label" >Age</label>
                                    <input type="number" class="form-control"value="<%= user.age %>" name="age">
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <label class="form-label" >Gender</label>
                                    <select name="gender" id="gender" class="form-control mb-3">
                                        <option value="male" <%if(user.gender=='male'){%>selected<%}%> >Male</option>
                                        <option value="female"<%if(user.gender=='female'){%>selected<%}%> >Female</option>
                                        <option value="custom"<%if(user.gender=='custom'){%>selected<%}%> >Custom</option>
                                    </select>
                                </div>
                                <div class="dropdown-divider"></div>
                                <div class="mb-3 col-md-6 col-lg-6 col-xl-6">
                                    <label class="form-label" >Subjects</label>
                                    <input type="text" class="form-control"value="<%= user.subjects %>" name="subjects">
                                </div>
                                <div class="mb-3 col-md-3 col-lg-3 col-xl-3">
                                    <label class="form-label" >Class days</label>
                                    <input type="number" class="form-control"value="<%= user.days %>" name="days">
                                </div>
                                <div class="mb-3 col-md-3 col-lg-3 col-xl-3">
                                    <label class="form-label" >Preferable classes</label>
                                    <input type="text" class="form-control"value="<%= user.class %>" name="class">
                                </div>
                                <div class="mb-3 col-12">
                                    <label class="form-label" >institute</label>
                                    <input type="text" class="form-control"value="<%= user.institute %>" name="institute">
                                </div>
                                <div class="mb-3 dropdown-divider"></div>
                                <div class="mb-3 col-md-3 col-lg-3 col-xl-3">
                                    <label class="form-label" >Divission</label>
                                    <select name="divission" id="divissions" class="form-control mb-3">
                                    </select>
                                </div>
                                <div class="mb-3 col-md-3 col-lg-3 col-xl-3">
                                    <label class="form-label" >Districts</label>
                                    <select name="district"id="districts" class="form-control mb-3"></select>
                                </div>
                                <div class="mb-3 col-md-3 col-lg-3 col-xl-3">
                                    <label class="form-label" >Upozilla</label>
                                    <select name="upozilla"id="upozilla" class="form-control mb-3"></select>
                                </div>
                                <div class="mb-3 col-md-3 col-lg-3 col-xl-3">
                                    <label class="form-label" >Union</label>
                                    <select name="union"id="union" class="form-control mb-3"></select>
                                </div>
                                <div class="mb-3 dropdown-divider"></div>
                               
                                <div class="mb-3 col-md-12">
                                    <label class="form-label" >Bio</label>
                                    <textarea class="form-control"name="bio" placeholder="description"><%= user.bio %></textarea>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label">Avatar</label>
                                    <input type="file" class="form-control mb-3" name="avater">
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label">Cover</label>
                                    <input type="file" class="form-control mb-3" name="cover">
                                </div>
                            </div>
                        </form>
                        <form id="nestedForm"action="/user/<%= user._id %>/delete"method="post"></form>
                        <div class="btn-group btn-group-lg mb-3" role="group" aria-label="Large button group">
                            <button type="submit"form="main" class="btn btn-primary">Save</button>
                            <button type="submit"form="nestedForm"class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>
<script src="/js/axios.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded",async function() {
        flatpickr(".flatpickr-minimum");
//----------------------
        
        let apiDivissionsData = await axios.get('/api/divissions');
        let apiDivissions= apiDivissionsData.data.divissions;
        let domDivissions = "";
        let userDivission = "<%= user.divission %>";
        let userDistrict = `<option value="<%= user.district %>"><%= user.district %></option>`;
        let userUpozilla = `<option value="<%= user.upozilla %>"><%= user.upozilla %></option>`;
        let userUnion = `<option value="<%= user.union %>"><%= user.union %></option>`;
        
        apiDivissions.forEach((el)=>{
            domDivissions += `<option value="${el.name}" ${el.name==userDivission?'selected':''}>${el.name}</option>`
        })
        document.getElementById("divissions").innerHTML = domDivissions;
        document.getElementById("districts").innerHTML = userDistrict;
        document.getElementById("upozilla").innerHTML = userUpozilla;
        document.getElementById("union").innerHTML = userUnion;
        //------------

        document.getElementById("divissions").onchange = async ()=>{
            let apiDistrictsData = await axios.get('/api/districts');
            let apiDistricts= apiDistrictsData.data.districts;
            let filter = document.getElementById("divissions").value;
            let newDistricts = apiDistricts.filter((el)=>{return el.divission == filter});
            let domDistricts = "";
            domDistricts += `<option>Select a district</option>`;
            newDistricts.forEach((el)=>{ domDistricts += `<option value="${el.name}">${el.name}</option>`})
            document.getElementById("districts").innerHTML = domDistricts; 
        }
        document.getElementById("districts").onchange = async()=>{
            let apiUpozillasData = await axios.get('/api/upozillas');
            let apiUpozillas= apiUpozillasData.data.upazillas;
            let filter = document.getElementById("districts").value;
            let newUpozillas = apiUpozillas.filter((el)=>{return el.district == filter});
            let domUpozillas = "";
            domUpozillas += `<option value="">Select an upozilla</option>`;
            newUpozillas.forEach((el)=>{ domUpozillas += `<option value="${el.name}">${el.name}</option>`})
            document.getElementById("upozilla").innerHTML = domUpozillas; 
        }
        document.getElementById("upozilla").onchange = async()=>{
            let apiUnionsData = await axios.get('/api/unions');
            let apiUnions= apiUnionsData.data.unions;
            let filter = document.getElementById("upozilla").value;
            let newUnions = apiUnions.filter((el)=>{return el.upazilla == filter});
            let domUnions = "";
            domUnions += `<option value="">Select an union</option>`;
            newUnions.forEach((el)=>{ domUnions += `<option value="${el.name}" >${el.name}</option>`})
            document.getElementById("union").innerHTML = domUnions; 
        }
    });
</script>

<%- include("partials/footer") %>