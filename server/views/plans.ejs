<%- include("partials/header",{path:'/plans'}) %>
<main class="content">
	<div class="container-fluid p-0">

		<div class="mb-3">
			<h1 class="h3 d-inline align-middle">Users</h1>
		</div>

		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<table id="datatables-reponsive" class="table table-striped" style="width:100%">
							<thead>
								<tr>
									<th>Title</th>
									<th>Days</th>
									<th>Price</th>
									<th>Edit</th>
								</tr>
							</thead>
							<tbody>
								<% plans.forEach((plan)=>{%>
									<tr>
										<td><%= plan.title %></a></td>
										<td><%= plan.days %></a></td>
										<td><%= plan.amount %></a></td>
										<td>
											<a class="btn btn-primary" href="/plan/<%= plan._id %>"><i class="align-middle" data-feather="eye"></i></a>
										</td>
									</tr>
								<% }) %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</div>
</main>
<%- include("partials/footer") %>