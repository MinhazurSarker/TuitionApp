<%- include("partials/header",{path:'/'}) %>

<main class="content">
    <div class="container-fluid p-0">

        <div class="row mb-2 mb-xl-3">
            <div class="col-auto d-none d-sm-block">
                <h3><strong>Dashboard</strong></h3>
            </div>

            <div class="col-auto ms-auto text-end mt-n1">
                <a href="/users" class="btn btn-light bg-white me-2">Users</a>
                <a href="/users/new" class="btn btn-primary">New user</a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col mt-0">
                                <h5 class="card-title">Upgraded</h5>
                            </div>
                        </div>
                        <h1 class="mt-1 mb-3"><%= totalUp %></h1>
                        <div class="mb-0">
                            <span class="text-muted">Total upgraded users this month</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col mt-0">
                                <h5 class="card-title">Logins</h5>
                            </div>
                        </div>
                        <h1 class="mt-1 mb-3"><%= totalLogin %></h1>
                        <div class="mb-0">
                            <span class="text-muted">Total login this month</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col mt-0">
                                <h5 class="card-title">Registrations</h5>
                            </div>
                        </div>
                        <h1 class="mt-1 mb-3"><%= totalReg %></h1>
                        <div class="mb-0">
                            <span class="text-muted">Total Registrations this month</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col mt-0">
                                <h5 class="card-title">Income</h5>
                            </div>
                        </div>
                        <h1 class="mt-1 mb-3">à§³ <%= totalIncome %></h1>
                        <div class="mb-0">
                            <span class="text-muted">Total income this month</span>
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
        <div class="mb-3">
			<h1 class="h3 d-inline align-middle">Clear all chats or all messages</h1>
		</div>
		<div class="row p-3">
            <a href="/settings/clear-chats" class="col-2 mx-1 btn btn-danger">Clear all messages</a>
            <a href="/settings/clear-convs" class="col-2 mx-1 btn btn-danger">Clear all chats</a>
		</div>
        <div class="mb-3 mt-4">
			<h1 class="h3 d-inline align-middle">Transictions</h1>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<table id="datatables-reponsive" class="table table-striped" style="width:100%">
							<thead>
								<tr>
									<th>Phone</th>
									<th>Amount</th>
									<th>Plan</th>
									<th>Status</th>
									<th>TrxID</th>
									<th>time</th>
								</tr>
							</thead>
							<tbody>
								<% trxs.forEach((trx)=>{%>
									<tr>
										<td class="table-action"><a href="tel:+<%= trx.phone %>">+<%= trx.phone %></a></td>
										<td><%= trx.amount %></td>
										<td><%= trx.plan %></td>
										<td><%= trx.status %></td>
										<td><%= trx._id %></td>
										<td><%= trx.createdAt %></td>
									</tr>
								<% }) %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

    </div>
</main>
<%- include("partials/footer") %>