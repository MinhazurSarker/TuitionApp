<%- include("partials/header",{path:'/plan'}) %>
<main class="content">
    <div class="container-fluid p-0">
        <div class="mb-3">
            <h1 class="h3 d-inline align-middle">Edit</h1>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Edit plan</h5>
                    </div>
                    <div class="card-body">
                        <form id="main" action="/plan/<%= plan._id %>" method="post">
                            <div class="row">
                                <div class="mb-3 col-md-12">
                                    <label class="form-label" >Title</label>
                                    <input type="text" class="form-control"value="<%= plan.title %>" name="title" >
                                </div>
                                <div class="mb-3 col-md-12">
                                    <label class="form-label" >Days</label>
                                    <input type="number" class="form-control"value="<%= plan.days %>" name="days" >
                                </div>
                                <div class="mb-3 col-md-12">
                                    <label class="form-label" >Price amount</label>
                                    <input type="number" class="form-control"value="<%= plan.amount %>" name="amount" >
                                </div>
                                <div class="mb-3 col-md-12">
                                    <label class="form-label" >description</label>
                                    <textarea class="form-control" name="desc"><%= plan.desc %></textarea>
                                </div>
                            </div>
                        </form>
                        <form id="nestedForm"action="/plan/<%= plan._id %>/delete"method="post"></form>
                        <div class="btn-group btn-group-lg mb-3" role="group" aria-label="Large button group">
                            <button type="submit"form="main" class="btn btn-primary">Save</button>
                            <button type="submit"form="nestedForm"class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include("partials/footer") %>